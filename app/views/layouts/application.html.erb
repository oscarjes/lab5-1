<!DOCTYPE html>
<html>
  <head>
    <title>Lab51</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <nav class="nav justify-content-center" style="margin-bottom: 25px; padding-top: 5px;">
      <ul class="nav nav-pills">
        <% if current_user %>
        <li class="nav-item">
          <%= link_to "Log out #{current_user.email}", logout_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
          <%= link_to "Log In", login_path, class: "nav-link"%>
          </li>
          <li class="nav-item">
          <%= link_to "Sign Up", new_user_path, class: "nav-link"%>
          </li>
        <% end %>
      </ul>
    </nav>
    <%= flash_messages %>
    <%= yield %>
  </body>
</html>
