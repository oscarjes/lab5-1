<h1 style="text-align: center; margin-bottom: 25px;">Log In</h1>

<div class="card" style="width: 350px; margin-left: auto; margin-right: auto; ">
  <div class="card-block">
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= text_field_tag "email", "", class: "form-control", placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= password_field_tag "password", "", class: "form-control", placeholder: "Password" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Log In", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
